<style>
    div[ng-form].ng-submitted .link-invalid-option {
        color: #b75755 !important;
        font-weight: bold;
    }

    div[ng-form].ng-submitted input[class*='ng-invalid'] {
        border-radius: 5px;
        border: #cc5f5f 1px solid;
        background-color: #f2dede;
        color: #b75755;
    }

    div[ng-form].ng-submitted table.ng-invalid-length {
        border-radius: 5px;
        background-color: #f2dede;
        color: #b75755;
    }

    input.ng-dirty.ng-invalid-required {
        border-radius: 5px;
        border: #cc5f5f 1px solid;
        background-color: #f2dede;
        color: #b75755;
    }

    .required {
        color: red;
    }
</style>

<div ng-app="app" ng-form="frmResume">
    <div class="row tab-content" ng-controller="CandidateController as controller">
        <div class="row">
            <alert id="alert" name="alert"></alert>
            <nav class="navbar navbar-default navbar-fixed-bottom">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <button type="button" class="collapsed navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-7" aria-expanded="false">
                            <span class="sr-only">Toggle navigation</span> <span class="icon-bar"></span> <span class="icon-bar"></span> <span class="icon-bar"></span>
                        </button> <a href="#" class="navbar-brand">&copy; 2017 - Easycomtec</a>
                    </div>
                    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-7">
                        <ul class="nav navbar-nav">
                            <li class="active"><a data-toggle="tab" href="#personalData" ng-class="controller.profileFormIsValid(frmResume) ? '' : 'link-invalid-option'">Personal data</a></li>
                            <li><a data-toggle="tab" href="#contactData" ng-class="frmResume.Phones.$valid === false ? 'link-invalid-option' : ''">Contact</a></li>
                            <li><a data-toggle="tab" href="#skillData" ng-class="frmResume.Skills.$valid === false ? 'link-invalid-option' : ''">Skills</a></li>
                        </ul>
                        <form class="navbar-form navbar-left pull-left">
                            <button type="button" ng-click="controller.saveProfile(frmResume)" class="btn btn-success">Save Profile</button>
                            @*ng-disabled="!frmResume.$valid"*@
                        </form>
                    </div>
                </div>
            </nav>
        </div>
        <div id="personalData" class="tab-pane fade in active">
            <script type="in/Login" class="btn" redirect-uri="http://localhost:52860">
            </script>
            <div class="panel panel-default">
                <div class="panel-heading"><h4>Basic Info</h4></div>
                <div class="panel-body">
                    <input id="Id" name="Id" type="hidden" />
                    <div class="form-group">
                        <span class="required">*</span>
                        <label for="Name">Name</label>
                        <input type="text" id="Name" name="Name" ng-model="controller.candidate.Name" class="form-control" ng-required="true" />
                    </div>
                    <div class="form-group">
                        <span class="required">*</span>
                        <label for="BirthDate">Birth Date</label>
                        <input type="date" id="BirthDate" name="BirthDate" ng-model="controller.candidate.BirthDate" class="form-control" ng-required="true" />
                    </div>
                    <div class="form-group">
                        <span class="required">*</span>
                        <label for="Email">Email</label>
                        <input type="email" id="Email" nam e="Email" ng-model="controller.candidate.Account.Email" class="form-control" ng-required="true" />
                    </div>
                </div>
            </div>
            @*</div>
                <div id="addressData" class="tab-pane fade">*@
            <div class="panel panel-default">
                <div class="panel-heading"><h4>Address Info</h4></div>
                <div class="panel-body">
                    <div class="form-group">
                        <span class="required">*</span>
                        <label for="Name">Country</label>
                        <input type="text" id="Country" name="Country" ng-model="controller.candidate.Address.Country" class="form-control" ng-required="true" />
                    </div>
                    <div class="form-group">
                        <span class="required">*</span>
                        <label for="Name">State</label>
                        <input type="text" id="State" name="State" ng-model="controller.candidate.Address.State" class="form-control" ng-required="true" />
                    </div>
                    <div class="form-group">
                        <span class="required">*</span>
                        <label for="Name">City</label>
                        <input type="text" id="City" name="City" ng-model="controller.candidate.Address.City" class="form-control" ng-required="true" />
                    </div>
                    <div class="form-group">
                        <label for="Name">Number</label>
                        <input type="text" id="Number" name="Number" ng-model="controller.candidate.Address.Number" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="Name">Postal Code</label>
                        <input type="text" id="PostalCode" name="PostalCode" ng-model="controller.candidate.Address.PostalCode" class="form-control" ng-pattern="/^(\d{5}(-\d{3,4})?|[A-Z]\d[A-Z] *\d[A-Z]\d)$/" />
                    </div>
                </div>
            </div>
        </div>
        <div id="contactData" class="tab-pane fade">
            <phone phones="controller.candidate.Phones" add-phone="controller.addPhone(phone)" remove-phone="controller.removePhone(phone)"></phone>
        </div>
        <div id="skillData" class="tab-pane fade">
            <skill skills="controller.candidate.Skills" add-skill="controller.addSkill(skill)" remove-skill="controller.removeSkill(skill)"></skill>
        </div>

    </div>
</div>
